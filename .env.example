# FastPlanner Environment Variables Template
# Copy this file to .env.local and .env.production with actual values

# Mapbox API Token (Required - CRITICAL for production)
# Get from: https://account.mapbox.com/access-tokens/
# Format: pk.ey... (must start with 'pk.')
# Domain restrictions: Configure allowed URLs in MapBox dashboard
VITE_MAPBOX_TOKEN=your_mapbox_token_here

# Palantir Configuration (Required)
VITE_PALANTIR_URL=https://bristow.palantirfoundry.com
VITE_PALANTIR_CLIENT_ID=your_client_id_here
VITE_PALANTIR_ONTOLOGY_RID=your_ontology_rid_here

# Weather API Configuration (Optional - defaults to relative URLs)
VITE_WEATHER_PROXY_BASE_URL=

# Environment (development, staging, production)
VITE_ENVIRONMENT=production

# Feature Flags
VITE_ENABLE_3D_WEATHER=true
VITE_ENABLE_DEBUG_LOGGING=false
VITE_ENABLE_WEBGL_FALLBACK=true

# CDN Configuration (Optional)
VITE_CDN_BASE_URL=
VITE_STATIC_ASSETS_URL=